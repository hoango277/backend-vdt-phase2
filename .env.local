# --- App ---
UVICORN_PORT=8000
LOG_LEVEL=INFO

# --- Database ---
POSTGRES_DB=logocs
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/logocs

# --- Elasticsearch ---
ELASTICSEARCH_URLS=http://localhost:9200
ES_INDEX_PREFIX=logocs
# Nếu bật security cho ES/Kibana, mở các biến dưới:
# ELASTIC_USERNAME=elastic
# ELASTIC_PASSWORD=changeme
# ELASTIC_CA_CERT=/path/to/http_ca.crt

# --- Kafka ---
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=127.0.0.1:9094
KAFKA_TOPIC_INTERACTION=logocs-interaction
KAFKA_TOPIC_NETWORK=logocs-network

# --- Kafka Topics layout ---
KAFKA_TOPIC_PARTITIONS=3
# Single-broker dev => RF phải là 1
KAFKA_TOPIC_RF=1

# --- Kafka Processor ---
KAFKA_CONSUMER_GROUP=logocs-processor
PROCESSOR_MAX_BATCH=500
PROCESSOR_FLUSH_MS=2000
